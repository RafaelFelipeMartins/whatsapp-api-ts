{
  "name": "whatsapp-api-ts",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node src/database/runMigrations.ts && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate:make": "knex --knexfile src/database/knexfile.ts migrate:make",
    "migrate:latest": "knex --knexfile src/database/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback",
    "seed:run": "knex --knexfile src/database/knexfile.ts seed:run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.26.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.3.0",
    "@types/pg": "^8.15.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
